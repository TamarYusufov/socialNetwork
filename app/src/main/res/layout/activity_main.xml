<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_background"
    android:padding="20dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/illustrationImageView"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/good_doggy_amico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sloganTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to petit, start taking care your pet today"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#757575"

        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/illustrationImageView"
        android:layout_marginTop="8dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:backgroundTint="@color/blue_button"
        android:textColor="@color/white"
        android:layout_below="@id/sloganTextView"
        android:textStyle="bold"
        android:textSize="@dimen/textButtonSize"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/petOwnerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_as_pet_owner"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/blue_button"
        android:layout_below="@id/loginButton"
        android:textStyle="bold"
        android:textSize="@dimen/textButtonSize"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:strokeColor="@color/blue_button"
        app:strokeWidth="5dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/professionalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_as_professional"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/blue_button"
        android:layout_below="@id/petOwnerButton"
        android:textStyle="bold"
        android:textSize="@dimen/textButtonSize"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:strokeColor="@color/blue_button"
        app:strokeWidth="5dp"/>

</RelativeLayout>
